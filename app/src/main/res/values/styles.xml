<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme" parent="MaterialAlertDialog.Material3">

    </style>

    <style name="detailItemCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_80dp</item>

        <item name="android:layout_marginTop">@dimen/margin_2dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_2dp</item>

        <item name="android:backgroundTint">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>
    <style name="detailItemBaseStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">@dimen/padding_20dp</item>
        <item name="android:paddingStart">@dimen/padding_20dp</item>
    </style>
    <style name="detailItemHeader" parent="detailItemBaseStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>

    </style>
    <style name="detailItemSupportText" parent="detailItemBaseStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_14dp</item>
    </style>

</resources>